/* ========== PREMIUM GLASS THEME ========== */
@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap');

:root {
    /* Deep Space Base */
    --bg-app: #020617;
    /* Slate 950 */
    --bg-glass: rgba(15, 23, 42, 0.6);
    --bg-glass-hover: rgba(30, 41, 59, 0.7);
    --bg-panel: rgba(15, 23, 42, 0.4);

    /* Neon Accents */
    --primary: #3b82f6;
    --primary-glow: rgba(59, 130, 246, 0.5);
    --accent: #8b5cf6;
    --accent-glow: rgba(139, 92, 246, 0.5);
    --success: #10b981;
    --danger: #ef4444;

    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    --gradient-accent: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
    --gradient-glass: linear-gradient(180deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
    --gradient-pitch: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);

    /* Text */
    --text-main: #f8fafc;
    --text-muted: #94a3b8;
    --text-dim: #64748b;

    /* Borders & Shadows */
    --border-glass: rgba(255, 255, 255, 0.08);
    --border-highlight: rgba(255, 255, 255, 0.15);
    --shadow-glass: 0 8px 32px 0 rgba(0, 0, 0, 0.4);
    --shadow-glow: 0 0 20px rgba(59, 130, 246, 0.2);
    --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.15);

    /* Misc */
    --glass-blur: blur(20px);
    --radius-lg: 24px;
    --radius-md: 16px;
    --radius-sm: 12px;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

height: 6px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    padding: 0 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(2, 6, 23, 0.6);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-glass);
    z-index: 50;
}

.header-content {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.brand {
    display: flex;
    align-items: center;
    gap: 20px;
}

.brand-icon {
    width: 48px;
    height: 48px;
    border-radius: 16px;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: white;
    box-shadow: var(--shadow-glow);
    position: relative;
    overflow: hidden;
}

.brand-icon::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, transparent 100%);
}

.brand-info h1 {
    font-size: 24px;
    font-weight: 800;
    letter-spacing: -0.03em;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
}

.brand-info span {
    font-size: 12px;
    color: var(--primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    display: block;
    margin-top: 2px;
}

.header-controls {
    display: flex;
    gap: 16px;
}

.btn-icon {
    width: 44px;
    height: 44px;
    border-radius: 14px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border-glass);
    color: var(--text-muted);
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.btn-icon:hover {
    background: rgba(255, 255, 255, 0.08);
    display: grid;
    grid-template-columns: 300px 1fr 340px;
    gap: 32px;
    padding: 32px;
    overflow: hidden;
}

/* Glass Panels */
.sidebar-panel {
    background: var(--bg-panel);
    backdrop-filter: var(--glass-blur);
    border: 1px solid var(--border-glass);
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: var(--shadow-glass);
    transition: var(--transition);
    position: relative;
}

.sidebar-panel::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
}

.panel-header {
    padding: 24px;
    border-bottom: 1px solid var(--border-glass);
    display: flex;
    align-items: center;
    gap: 16px;
}

.panel-header i {
    color: var(--primary);
    font-size: 20px;
    filter: drop-shadow(0 0 8px var(--primary-glow));
}

.panel-header h2 {
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-main);
}

/* Formations List */
.formations-grid {
    padding: 20px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.formation-btn {
    background: var(--gradient-glass);
    border: 1px solid var(--border-glass);
    border-radius: var(--radius-md);
    padding: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 16px;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.formation-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--border-highlight);
    transform: translateX(4px);
}

.formation-btn.active {
    background: rgba(59, 130, 246, 0.1);
    border-color: var(--primary);
    box-shadow: inset 0 0 20px rgba(59, 130, 246, 0.1);
}

.formation-btn.active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--primary);
    box-shadow: 0 0 10px var(--primary);
}

.formation-viz {
    width: 40px;
    height: 40px;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.formation-dots {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2px;
    padding: 2px;
}

.formation-dots span {
    width: 3px;
    height: 3px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
}

.formation-btn.active .formation-dots span {
    background: var(--primary);
    box-shadow: 0 0 4px var(--primary);
}

.formation-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.formation-info strong {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-main);
}

.formation-info small {
    font-size: 12px;
    color: var(--text-muted);
    font-weight: 500;
}

/* Pitch Section */
.pitch-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24px;
    position: relative;
    height: 100%;
    min-height: 0;
}

.phase-tabs {
    display: flex;
    gap: 8px;
    justify-content: center;
    background: rgba(2, 6, 23, 0.5);
    padding: 6px;
    border-radius: 100px;
    border: 1px solid var(--border-glass);
    backdrop-filter: blur(12px);
    align-self: center;
    box-shadow: var(--shadow-card);
}

.phase-tab {
    background: transparent;
    border: none;
    color: var(--text-muted);
    padding: 10px 28px;
    border-radius: 100px;
    cursor: pointer;
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
    font-size: 14px;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 10px;
}

.phase-tab:hover {
    color: var(--text-main);
    background: rgba(255, 255, 255, 0.05);
}

.phase-tab.active {
    background: var(--gradient-primary);
    color: white;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    font-weight: 600;
}

.pitch-container {
    flex: 1;
    background: var(--gradient-pitch);
    border: 1px solid var(--border-glass);
    border-radius: 32px;
    position: relative;
    overflow: hidden;
    box-shadow: inset 0 0 150px rgba(0, 0, 0, 0.6), 0 20px 50px rgba(0, 0, 0, 0.3);
}

/* Role Palette */
.role-palette {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(16px);
    border: 1px solid var(--border-glass);
    border-radius: 100px;
    padding: 10px 32px;
    display: flex;
    align-items: center;
    gap: 24px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    z-index: 50;
}

.palette-label {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--text-muted);
    font-weight: 700;
    font-size: 12px;
    text-transform: uppercase;
    border-right: 1px solid var(--border-glass);
    padding-right: 20px;
    letter-spacing: 0.05em;
}

.role-items {
    display: flex;
    gap: 16px;
}

.role-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: grab;
    transition: var(--transition);
    padding: 4px;
}

.role-item:hover {
    transform: translateY(-6px);
}

.role-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 12px;
    color: white;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
}

.role-circle::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, transparent 100%);
}

.role-item:hover .role-circle {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.6);
    border-color: white;
}

.role-item span {
    font-size: 0;
}

/* Tactics Controls */
.tactics-controls {
    padding: 24px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 32px;
}

.control-group {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.control-header {
    display: flex;
    justify-content: space-between;
    font-size: 13px;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.control-header .value {
    color: var(--primary);
    font-weight: 700;
    text-shadow: 0 0 10px var(--primary-glow);
}

.slider {
    appearance: none;
    -webkit-appearance: none;
    width: 100%;
    height: 6px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    outline: none;
    position: relative;
}

.slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 22px;
    height: 22px;
    background: white;
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
    transition: var(--transition);
    border: 2px solid var(--bg-app);
}

.slider::-webkit-slider-thumb:hover {
    transform: scale(1.2);
    background: var(--primary);
    border-color: white;
    box-shadow: 0 0 20px var(--primary);
}

.control-labels {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: var(--text-dim);
    font-weight: 500;
}

.player-instructions {
    margin-top: auto;
    border: 1px dashed var(--border-glass);
    background: rgba(255, 255, 255, 0.02);
    border-radius: var(--radius-md);
    padding: 32px;
    min-height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition);
}

.player-instructions:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: var(--border-highlight);
}

.empty-state {
    text-align: center;
    color: var(--text-muted);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    font-size: 14px;
}

.empty-state i {
    font-size: 32px;
    opacity: 0.8;
    color: var(--primary);
    filter: drop-shadow(0 0 10px var(--primary-glow));
}

/* Responsive */
@media (max-width: 1200px) {
    .dashboard-grid {
        grid-template-columns: 260px 1fr;
        grid-template-rows: 1fr auto;
    }

    .tactics-panel {
        grid-column: 1 / -1;
        height: auto;
        flex-direction: row;
        min-height: 220px;
    }

    .tactics-controls {
        flex-direction: row;
        flex-wrap: wrap;
        width: 100%;
        padding: 24px;
        gap: 24px;
    }

    .control-group {
        flex: 1;
        min-width: 240px;
    }

    .player-instructions {
        display: none;
    }
}

@media (max-width: 768px) {
    .header {
        padding: 0 20px;
        height: 70px;
    }

    .dashboard-grid {
        grid-template-columns: 1fr;
        padding: 16px;
        gap: 16px;
    }

    .sidebar-panel {
        display: none;
    }

    .pitch-wrapper {
        height: 60vh;
    }
}